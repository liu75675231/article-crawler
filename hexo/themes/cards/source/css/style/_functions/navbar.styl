.nav
    display flex
    flex-direction row 
    justify-content center
    max-width var(--content-width)
    margin 1.5rem auto
    height auto

    & + *
        margin-top 0

    .nav__prev
        display flex
        flex 50% 1
        justify-content flex-start
        text-align left


    .nav__next
        display flex
        flex 50% 1
        justify-content flex-end
        text-align right

    .nav__link
        display flex
        flex-direction row
        align-items center
        color var(--title-color)

        &:hover
            text-decoration none
            opacity 1

    .nav__label
        font-size 0.8rem
        font-weight 450
        color #808080

    .nav__title
        font-size 1rem
        font-weight 550
        line-height 1.125